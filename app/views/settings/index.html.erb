<div class="container py-3">
  <table class="table table-dark table-bordered text-center table-sm">
    <h3 class="text-center">Add setting</h3>
    <tbody>
    <tr>
      <%= form_with model: new_setting do |f| %>
        <td class="align-middle"><%= f.text_field :title, class: 'form-control', placeholder: 'Title*', autofocus: true %></td>
        <td class="align-middle"><%= f.text_field :value, class: 'form-control', placeholder: 'Value*' %></td>
        <td class="align-middle"><%= f.text_field :description, class: 'form-control', placeholder: 'Description' %></td>
        <td class="align-middle"><%= button_tag type: 'submit', title: "Add", class: "btn btn-primary btn-sm" do %>
            <i class="bi bi-plus-square"></i>
          <% end %>
        </td>
        </tr>
      <% end %>
      </tbody>
  </table>

  <%= render "settings", settings: settings %>
</div>
